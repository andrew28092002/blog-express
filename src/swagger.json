{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "REST API fro Blog",
    "description": "Test project",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "https://blog-express-production-cffd.up.railway.app",
  "basePath": "/",
  "tags": [
    {
      "name": "user",
      "description": "API for users in the system"
    },
    {
      "name": "auth",
      "description": "API for authentication"
    },
    {
      "name": "post",
      "description": "API for posts"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/user": {
      "get": {
        "tags": ["user"],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": ["user"],
        "summary": "Get one User by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "example": "64677c50e6d417284a1b3f2b"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "User's registration ",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "required": ["name", "password", "email", "confirmedPassword"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "confirmedPassword": {
                  "type": "string"
                }
              }
            },
            "example": {
              "name": "andrew12345",
              "email": "andrew12345@gmail.com",
              "password": "123123",
              "confirmedPassword": "123123"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Tokens"
            }
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "tags": ["auth"],
        "summary": "User's authentication ",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "required": ["password", "email"],
              "properties": {
                "password": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                }
              }
            },
            "example": {
              "email": "andrew12345@gmail.com",
              "password": "123123"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Tokens"
            }
          }
        }
      }
    },
    "/auth/refresh": {
      "get": {
        "tags": ["auth"],
        "summary": "Refresh tokens ",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Tokens"
            }
          }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "tags": ["auth"],
        "summary": "Logout",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/post": {
      "get": {
        "tags": ["post"],
        "summary": "Get all posts in system",
        "parameters": [
          {
            "name": "page",
            "in": "query"
          },
          {
            "name": "searchQuery",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Posts"
            }
          }
        }
      },
      "post": {
        "tags": ["post"],
        "summary": "Creating post",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "required": ["author", "message"],
              "properties": {
                "author": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "media": {
                  "type": "array"
                }
              }
            },
            "example": {
              "author": "64677c50e6d417284a1b3f2b",
              "message": "It is my first post!"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        }
      }
    },
    "/post/{id}": {
      "delete": {
        "tags": ["post"],
        "summary": "Delete Post by id of post",
        "parameters": [
          {
            "name": "id",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        }
      },
      "get": {
        "tags": ["post"],
        "summary": "Get one Post by id of post",
        "parameters": [
          {
            "name": "id",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        }
      },
      "put": {
        "tags": ["post"],
        "summary": "Creating post",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "media": {
                  "type": "array"
                }
              }
            },
            "example": {
              "message": "It is my second post"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": ["_id", "name", "email", "password"],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    },
    "Tokens": {
      "properties": {
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        }
      }
    },
    "Post": {
      "required": ["_id", "name", "email", "password"],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "author": {
          "type": "string",
          "$ref": "#/definitions/User"
        },
        "media": {
          "type": "array",
          "media": "string"
        },
        "createdAt": {
          "type": "number"
        }
      }
    },
    "Posts": {
      "type": "array",
      "$ref": "#/definitions/Post"
    }
  }
}
